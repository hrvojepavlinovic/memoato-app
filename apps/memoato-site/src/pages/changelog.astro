---
import BaseLayout from "../layouts/BaseLayout.astro";

const updates: Array<{ date: string; items: string[] }> = [
  {
    date: "2026-02-08",
    items: [
      "Improved SEO basics: social share previews (OpenGraph/Twitter) and better meta descriptions.",
      "Added robots.txt, sitemap.xml, llms.txt, and structured data (JSON-LD) for search engines and LLMs.",
    ],
  },
];
---

<BaseLayout
  title="Changelog Â· memoato"
  description="Product updates and changes."
  canonicalPath="/changelog"
>
  <section class="section">
    <div class="container prose">
      <h1 class="page-title">Changelog</h1>
      <p class="muted">Small, frequent updates. No fluff.</p>

      {updates.map((u) => (
        <div class="card changelog-card">
          <div class="changelog-head">
            <div class="changelog-date">{u.date}</div>
            <a class="muted" href="https://x.com/memoatoo" target="_blank" rel="noopener noreferrer">
              Follow updates on X
            </a>
          </div>
          <ul class="changelog-list">
            {u.items.map((item) => (
              <li>{item}</li>
            ))}
          </ul>
        </div>
      ))}

      <h2 class="changelog-more">More details</h2>
      <ul>
        <li>
          Blog: <a href="/blog">product notes and guides</a>
        </li>
        <li>
          GitHub:{" "}
          <a href="https://github.com/hrvojepavlinovic/memoato-app" rel="noopener noreferrer" target="_blank">
            source code and issues
          </a>
        </li>
      </ul>
    </div>
  </section>
</BaseLayout>
