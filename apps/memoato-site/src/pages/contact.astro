---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout
  title="Contact Â· memoato"
  description="Contact memoato: email, GitHub issues, and social."
  canonicalPath="/contact"
>
  <section class="section">
    <div class="container prose">
      <h1 class="page-title">Contact</h1>
      <div class="card contact-card">
        <div class="contact-grid">
          <a
            class="btn"
            href="mailto:hello@memoato.com"
            style="justify-content: flex-start"
            aria-label="Email hello@memoato.com"
          >
            <svg class="icon" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
              <path
                d="M20 4H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2Zm0 4-8 5L4 8V6l8 5 8-5v2Z"
              />
            </svg>
            <span>hello@memoato.com</span>
          </a>
          <a
            class="btn"
            href="https://x.com/memoatoo"
            rel="noopener noreferrer"
            target="_blank"
            style="justify-content: flex-start"
            aria-label="X profile"
          >
            <svg class="icon" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
              <path
                d="M18.9 2H22l-6.8 7.8L23.2 22h-6.4l-5-6.5L6 22H2.8l7.3-8.4L1 2h6.6l4.6 6 6.7-6Zm-1.1 18h1.8L7.5 3.9H5.6L17.8 20Z"
              />
            </svg>
            <span>x.com/memoatoo</span>
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
